<% if user_signed_in? %>
<div class="article-show-navbar">
  <%= link_to 'Editar Video', edit_video_path(@video), class: 'btn btn-warning btn-block btn-lg'  %>
  <%= link_to 'Destruir Video', @video, method: :delete, data: { confirm: 'Estas seguro de eliminar el video' }, class: 'btn btn-danger btn-block btn-lg' %>
</div>
<% else %>
<% end %>
<div class="video-player">
  <iframe src="https://www.youtube.com/embed/<%= @video.url %>" frameborder="0" allow="accelerometer; autoplay; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
  <div class="d-flex justify-content-between align-items-start video-footer">
    <div>
      <p><%= @video.title %></p>
      <p style="font-size: 16px; color: grey; font-weight: lighter;">12/02/202</p>
    </div>
    <h3><%= @video.category %></h3>
  </div>
  <div class="text-center p-5">
    <%= link_to 'Volver' ,videos_path, class: 'btn btn-services btn-block btn-lg '  %>
  </div>
</div>




