<%= render 'shared/topbar' %>
<%= render 'shared/navbar' %>
<div class="main-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
  <div>
    <h1>Le Wagon brings <strong>tech skills</strong> to <strong>creative people</strong>!</h1>
    <p>Change your life and learn to code at one of our campuses around the world.</p>
  </div>
</div>
<section id="services">
  <h2 class="title"> Nuestros Sevicios</h2>
  <%= render 'shared/services' %>
</section>
<section id="articles">
  <h2 class="title"> Novedades</h2>
  <%= render 'shared/articles' %>
</section>
<section id="social">
  <h2 class="title">Encontranos en nuestras redes</h2>
  <div class="social-banner" style="background-image: linear-gradient(rgba(0,0,0,0.4),rgba(0,0,0,0.4)), url(https://raw.githubusercontent.com/lewagon/fullstack-images/master/uikit/background.png);">
    <%= render 'shared/social' %>
  </div>
  <div class="social-footer">
    <div>
      <%= link_to '#' do  %>
      <i class="fab fa-instagram"></i>
      <% end %>
      <%= link_to '#' do  %>
      <i class="fab fa-facebook-square"></i>
      <% end %>
      <%= link_to '#' do  %>
      <i class="fab fa-youtube"></i>
      <% end %>
    </div>
  </div>
</section>
<section id="library">
  <h2 class="title"> ICONO en Red</h2>
  <%= render 'shared/network' %>
</section>
