<%= simple_form_for @post do |f| %>
<p>Titulo</p>
<%= f.input :title, label: false %>
<p>Subtitulo</p>
<%= f.input :subtitle, label: false %>
<p>Contenido</p>
<%= f.input :content, label: false, input_html: { rows: 8 } %>
<p>Foto</p>
<%= f.input :photos, as: :file, input_html: { multiple: true }, label: false %>
<br>
<%= f.submit 'Enviar', class: 'btn btn-block btn-services' %>
<% end %>

