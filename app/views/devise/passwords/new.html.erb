<div class="login-wrapper" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1491172700640-4f1a131a3670?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2700&q=80);">
  <div class="login-container">
    <h2>Olvidaste tu contraseÃ±a?</h2>

    <%= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <%= f.error_notification %>

    <div class="form-inputs">
      <p>Email</p>
      <%= f.input :email,
      required: true,
      autofocus: true,
      label: false,
      input_html: { autocomplete: "email" } %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Enviar", class: 'btn btn-services btn-block' %>
    </div>
    <br>
    <% end %>

    <%= render "devise/shared/links" %>
    <%= link_to 'Volver', :back, class: 'btn btn-dark btn-block'  %>
  </div>
</div>
