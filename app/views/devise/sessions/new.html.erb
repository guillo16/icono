<div class="login-wrapper" style="background-image: linear-gradient(rgba(0,0,0,0.2),rgba(0,0,0,0.2)), url(https://images.unsplash.com/photo-1491172700640-4f1a131a3670?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2700&q=80);">
  <div class="login-container">
    <h2>Iniciar Sesi√≥n</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="form-inputs">
      <%= f.input :email,
      required: false,
      autofocus: true,
      input_html: { autocomplete: "email" } %>
      <%= f.input :password,
      required: false,
      input_html: { autocomplete: "current-password" } %>
      <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
    </div>

    <div class="form-actions">
      <%= f.button :submit, "Log in", class: 'btn btn-services btn-block' %>
    </div>
    <% end %>
    <br>
    <%= render "devise/shared/links" %>
    <div class="p-5">
      <%= link_to 'Volver', :back, class: 'btn btn-dark btn-block'  %>
    </div>
  </div>
</div>
