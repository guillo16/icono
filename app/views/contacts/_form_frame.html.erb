<div class="form-container">
  <div class="forms">
    <%= simple_form_for @contact do |f| %>
    <h2>Envianos tu consulta</h2>
    <p>Nombre</p>
    <%= f.input :name, input_html: { class: "form-control "}, label: false %>
    <p>Telefono</p>
    <%= f.input :phone, input_html: { class: "form-control "}, label: false %>
    <p>Email</p>
    <%= f.input :email,input_html: { class: "form-control "}, label: false %>
    <p>Mensaje</p>
    <%= f.input :message, :as => :text, input_html: { class: "form-control form-control ", id:"exampleFormControlTextarea1", rows:"4" }, label: false %>
    <div class="d-none">
      <%= f.input :nickname %>
    </div>
    <%= f.submit 'Enviar', class: 'btn btn-services btn-block btn-main mt-5' %>
    <% end %>
  </div>
</div>
