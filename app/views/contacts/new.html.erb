<%= render 'shared/navbar' %>
<h2 class="title"> Contacto</h2>
<div class="form-wrapper">
  <div class="form-container">
    <div class="forms">
      <%= simple_form_for @contact do |f| %>
      <h2>Envianos tu consulta</h2>
      <p>Nombre</p>
      <%= f.input :name, input_html: { class: "form-control "}, label: false %>
      <p>Telefono</p>
      <%= f.input :phone, input_html: { class: "form-control "}, label: false %>
      <p>Email</p>
      <%= f.input :email,input_html: { class: "form-control "}, label: false %>
      <p>Mensaje</p>
      <%= f.input :message, :as => :text, input_html: { class: "form-control form-control ", id:"exampleFormControlTextarea1", rows:"4" }, label: false %>
      <div class="d-none">
        <%= f.input :nickname %>
      </div>
      <%= f.submit 'Send', class: 'btn btn-services btn-block btn-main m-0' %>
      <% end %>
    </div>
  </div>
  <div>
    <img src="https://images.unsplash.com/photo-1524661135-423995f22d0b?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1953&q=80" alt=""style="width: 100%; height: 100%;">
  </div>
</div>

