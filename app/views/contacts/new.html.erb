<h2 class="title"> Contacto</h2>
<div class="form-wrapper">
  <div class="form-container">
    <div class="forms">
      <%= simple_form_for @contact do |f| %>
      <h2>Envianos tu consulta</h2>
      <p>Nombre</p>
      <%= f.input :name, input_html: { class: "form-control "}, label: false %>
      <p>Telefono</p>
      <%= f.input :phone, input_html: { class: "form-control "}, label: false %>
      <p>Email</p>
      <%= f.input :email,input_html: { class: "form-control "}, label: false %>
      <p>Mensaje</p>
      <%= f.input :message, :as => :text, input_html: { class: "form-control form-control ", id:"exampleFormControlTextarea1", rows:"4" }, label: false %>
      <div class="d-none">
        <%= f.input :nickname %>
      </div>
      <%= f.submit 'Enviar', class: 'btn btn-services btn-block btn-main mt-5' %>
      <% end %>
    </div>
  </div>
  <div class="map">
    <div id="map"
    style="width: 100%; height: 450px;"
    data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"></div>
    <br>
    <p> <i class="fas fa-map-marker-alt"></i>&nbsp; Santiago 351 - San Miguel de Tucum√°n - Argentina</p>
    <p><i class="fas fa-envelope"></i> iconoinstituto.contacto@gmail.com</p>
    <p><i class="fas fa-phone"></i> 381-260-4510</p>
    <div class="contact-footer">
     <%= link_to 'https://www.instagram.com/iconoinstituto/', target: '_blank' do %>
     <i class="fab fa-instagram"></i>
     <% end %>
     <%= link_to 'https://www.facebook.com/Institutodecirugiayobesidaddelnorte', target: '_blank' do %>
     <i class="fab fa-facebook-square"></i>
     <% end %>
     <%= link_to '#' do  %>
     <i class="fab fa-youtube"></i>
     <% end %>
     <%= link_to 'https://api.whatsapp.com/send?phone=5493812088664', target: '_blank', rel: "noopener noreferrer" do %>
     <i class="fab fa-whatsapp-square"></i>
     <% end %>
   </div>
 </div>
</div>
