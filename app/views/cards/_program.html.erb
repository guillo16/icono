<div class="card">
  <%= link_to program_path(program) do %>
  <% program.photos.first(1).each do |photo| %>
  <%= cl_image_tag photo.key, class:'card-img-top' %>
  <% end %>
  <div class="card-body">
    <h5 class="card-title font-weight-bold"><%= program.title %></h5>
    <p class="card-text"><small><%= program.subtitle.truncate(80) %></small></p>
  </div>
  <% end %>
</div>
